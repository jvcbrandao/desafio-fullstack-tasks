datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Tarefa {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  // Opcional
  status      String   @default("pendente") // "pendente" ou "conclu√≠da"
  createdAt   DateTime @default(now())
}

